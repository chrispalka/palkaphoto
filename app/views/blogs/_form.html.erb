<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, image: :error) %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_field :body, class: 'form-control' %>
      </div>

    <div class="form-group">
      <%= form.submit 'Save Blog Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
