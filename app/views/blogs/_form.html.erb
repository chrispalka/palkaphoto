<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, image: :error) %>
    <% end %>
  <% end %>



    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.collection_select(:category_id, Category.all, :id, :title,
                              {
                                include_blank: true
                              },
                              class: 'form-control'
                              )
      %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 15 %>
    </div>

    <div class="form-group">
      <label class="btn btn-primary">
        Upload image <%= form.file_field :blog_image, style: 'display:none;' %>
      </label>
    </div>

  <div class="form-group">
    <%= form.submit 'Save Blog Item', class: 'btn btn-primary btn-block' %>
  </div>


<% end %>
