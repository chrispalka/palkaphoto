<div class="col-sm-8 blog-main">
  <% if logged_in?(:site_admin) %>
    <%= render partial: 'blogs/admin_actions', locals: { blog: @blog } %>
  <% end %>
  <h2 class="section-heading"><%= @blog.title %></h2>
  <h3 class="subheading"><%= @blog.subtitle %></h3>
    <p><%= @blog.category.title if logged_in?(:site_admin) %></p>
    <p>
      <%= image_tag blog_img(@blog.blog_image) %>
    </p>
    <p>
      <%= @blog.body %>
    </p>

    <% unless current_user.is_a? GuestUser %>
      <%= form_for @comment, url: '#' do |f| %>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, rows: 5, class: 'form-control' %>
        </div>
        <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
      <% end %>
    <% end %>

    <%= render @blog.comments %>
</div>
