<div class="col-md-4 drop">
  <div class="card mb-5 shadow-sm" data-id="<%= portfolio_item.id %>">
    <a href="<%= portfolio_item.image %>" class="flash" data-lightbox="image-1">
      <%= image_tag portfolio_img(portfolio_item.image.thumb).to_s, width: '100%', height: '100%' %>
      <span><%= portfolio_item.title %></span>
    </a>
    <% if logged_in?(:site_admin) %>
    <%= link_to 'Delete',portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <%= link_to 'Edit',edit_portfolio_path(portfolio_item), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
