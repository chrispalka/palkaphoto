<h1>Portfolios</h1>

<%= link_to 'Create New Portfolio',  new_portfolio_path %>

<% @portfolios.each do |portfolio| %>
  <p><%= portfolio.title %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.image unless portfolio.image.nil? %>
  <%= link_to 'Edit', edit_portfolio_path(portfolio) %>
  <%= link_to 'Delete', portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' } %>
<% end %>
